{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SARIF Policy Map v1",
  "type": "object",
  "required": ["version", "rules"],
  "properties": {
    "version": { "type": "string", "const": "v1" },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rule_id", "severity_default", "canon_refs"],
        "properties": {
          "rule_id": { "type": "string" },
          "severity_default": { "type": "string", "enum": ["note", "warning", "error"] },
          "canon_refs": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "description": { "type": "string" },
          "examples": { "type": "array", "items": { "type": "object", "required": ["message","path_hint"], "properties": { "message": { "type": "string" }, "path_hint": { "type": "string" } } } }
        }
      }
    }
  }
}